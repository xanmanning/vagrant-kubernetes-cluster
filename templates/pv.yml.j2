{% for id in storage_id %}
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv{{ id }}
spec:
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  storageClassName: slow
  nfs:
    path: /kube/store{{ id }}
    server: {{ nfs_hostname }}
{% endfor %}
